{
  "name": "electron-simple-spreadsheet-editor",
  "version": "1.0.0",
  "description": "A spreadsheet editor built in Electron framework for CSV, ODS, XLS.",
  "main": "main.js",
  "scripts": {
    "0.run-development": "electron main.js --mode development",
    "1.run-production": "electron main.js --mode production",
    "2.run-development-load-data": "electron main.js --mode development --file \"demo-data\\shift_headers.ods\" \"demo-data\\student-por.csv\"",
    "pack": "electron-builder main.js --dir && node open-dist.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://pulipuli.chen@gmail.com@github.com/pulipulichen/Electron-Simple-Spreadsheet-Editor.git"
  },
  "keywords": [
    "Electron",
    "csv",
    "ods",
    "xls"
  ],
  "author": "Pulipuli Chen <blog@pulipuli.info>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pulipulichen/Electron-Simple-Spreadsheet-Editor/issues"
  },
  "homepage": "https://github.com/pulipulichen/Electron-Simple-Spreadsheet-Editor#readme",
  "devDependencies": {
    "electron": "^6.0.1",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "autodetect-decoder-stream": "^1.0.3",
    "chardet": "^0.8.0",
    "charset-detector": "^0.0.2",
    "csv-parser": "^2.3.0",
    "electron-prompt": "^1.3.1",
    "electron-settings": "^3.2.0",
    "file-type": "^12.1.0",
    "iconv": "^2.3.4",
    "iconv-lite": "^0.5.0",
    "jquery": "^3.4.1",
    "jschardet": "^2.1.0",
    "platform-folders": "^0.4.1",
    "read-chunk": "^3.2.0",
    "strip-bom-stream": "^4.0.0",
    "xlsx": "^0.15.1"
  },
  "build": {
    "appId": "chrome.webapp.shortcuts.creator",
    "compression": "maximum",
    "mac": {
      "category": "chrome.webapp.shortcuts.creator"
    },
    "win": {
      "icon": "app/imgs/icon256.ico",
      "target": "portable"
    },
    "linux": {
      "icon": "app/imgs/icon256.png",
      "category": "Network",
      "target": "deb",
      "desktop": {
        "Icon": "/opt/chrome-webapp-shortcuts-creator/app/imgs/icon256.png"
      }
    },
    "portable": {
      "artifactName": "electron-simple-spreadsheet-editor.exe"
    }
  },
  "files": [
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/*.d.ts",
    "!**/node_modules/.bin",
    "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
    "!.editorconfig",
    "!**/._*",
    "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
    "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
    "!**/{appveyor.yml,.travis.yml,circle.yml}",
    "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
    "main.js",
    "ipc.js",
    "app/*"
  ]
}